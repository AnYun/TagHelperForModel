@model TagHelperForModel.Models.LoginViewModel
@addTagHelper "*, TagHelperForModel"

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>LoginViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <display-title asp-for="Account" class="control-label"></display-title>
                <input asp-for="Account" class="form-control" />
            </div>
            <div class="form-group">
                <display-title asp-for="Password" class="control-label"></display-title>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
